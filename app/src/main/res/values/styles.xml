<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="LoginTheme" parent="AppTheme">
        <item name="colorPrimaryDark">@color/LoginPrimaryColorDark</item>
    </style>

    <style name="HomeActivityTheme" parent="AppTheme">
        <item name="colorPrimaryDark">@color/HomeActivityPrimaryColorDark</item>
        <item name="colorPrimary">@color/HomeActivityPrimaryColor</item>
    </style>

    <style name="CMSActivityTheme" parent="AppTheme">
        <item name="colorPrimaryDark">@color/FragmentInfoPrimaryColorDark</item>
        <item name="colorPrimary">@color/FragmentInfoPrimaryColor</item>
        <item name="colorAccent">@color/FragmentInfoAccentColorDark</item>
    </style>

    <style name="AddGrievanceTheme" parent="AppTheme">
        <item name="colorPrimaryDark">@color/FragmentMenuPrimaryColorDark</item>
        <item name="colorPrimary">@color/FragmentMenuPrimaryColor</item>
        <item name="colorAccent">@color/FragmentMenuAccentColorDark</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
